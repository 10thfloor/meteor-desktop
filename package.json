{
  "name": "meteor-desktop",
  "version": "0.0.67",
  "bin": {
    "meteor-desktop": "dist/bin/cli.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "description": "Build a Meteor's desktop client with hot code push.",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register \"tests/+(functional|unit)/**/*.test.js\"",
    "test-watch": "watch \"npm run test\" --wait 10 dist tests/unit tests/functional scaffold skeleton",
    "lint": "eslint -c .eslintrc **/*.js",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --compilers js:babel-core/register \"tests/+(functional|unit)/**/*.test.js\"",
    "version": "node dist/scripts/propagateVersion.js && git add plugins",
    "postversion": "npm run publish-all",
    "postinstall": "node dist/scripts/addToScripts || echo",
    "publish-plugins": "cd plugins/bundler && (meteor publish || echo) && cd ../watcher && (meteor publish || echo)",
    "prepublish": "npm run build",
    "publish-all": "npm run publish-plugins && npm publish",
    "build": "babel lib --out-dir dist --source-maps inline --copy-files",
    "build-watch": "babel lib --watch --out-dir dist --source-maps inline --copy-files",
    "develop": "npm-run-all --parallel build-watch test-watch"
  },
  "author": "Bartosz Wojtkowiak <bartosz@wojtkowiak.it>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "chai": "^3.5.0",
    "connect": "3.5.0",
    "connect-modrewrite": "0.9.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.6.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0",
    "find-port": "2.0.1",
    "fs-plus": "^2.9.2",
    "mocha": "^2.5.3",
    "istanbul": "^0.4.5",
    "merge-stream": "^1.0.0",
    "mockery": "^2.0.0",
    "npm-run-all": "^3.1.0",
    "proxyquire": "^1.7.9",
    "queue": "4.0.0",
    "request": "^2.75.0",
    "rewire": "^2.5.1",
    "run-sequence": "^1.2.1",
    "serve-static": "1.11.1",
    "server-destroy": "1.0.1",
    "sha1-file": "^1.0.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "watch": "^1.0.0"
  },
  "dependencies": {
    "asar": "0.12.3",
    "babel-core": "6.17.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-node6": "11.0.0",
    "babel-preset-stage-1": "6.16.0",
    "babel-runtime": "6.11.6",
    "commander": "2.9.0",
    "cross-spawn": "4.0.2",
    "del": "2.2.2",
    "electron": "1.4.3",
    "electron-builder": "7.12.2",
    "electron-packager": "8.1.0",
    "electron-rebuild": "1.2.0",
    "glob": "7.1.1",
    "hash-files": "1.1.1",
    "lodash": "4.16.4",
    "node-fetch": "1.6.3",
    "npm": "3.10.8",
    "semver": "5.3.0",
    "semver-regex": "1.0.0",
    "shelljs": "0.7.4",
    "single-line-log": "1.1.2",
    "uglify-js": "2.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wojtkowiak/meteor-desktop"
  },
  "keywords": [
    "electron",
    "meteor",
    "packager",
    "desktop"
  ],
  "bugs": {
    "url": "https://github.com/wojtkowiak/meteor-desktop/issues"
  },
  "homepage": "https://github.com/wojtkowiak/meteor-desktop"
}
